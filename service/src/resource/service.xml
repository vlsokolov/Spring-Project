<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config />
    <context:component-scan base-package="com.becomejavasenior" />

    <bean id="serviceFactory" class="com.becomejavasenior.service.impl.ServiceFactoryImpl" />

    <bean id="companyService" class="com.becomejavasenior.service.impl.CompanyServiceImpl"
          factory-method="createInstance" lazy-init="true" />

    <bean id="contactService" class="com.becomejavasenior.service.impl.ContactServiceImpl"
          factory-method="createInstance" lazy-init="true" />

    <bean id="dealService" class="com.becomejavasenior.service.impl.DealServiceImpl"
          factory-bean="serviceFactory" factory-method="getDealService"
          scope="singleton" />

    <bean id="userService" class="com.becomejavasenior.service.impl.UserServiceImpl"
          factory-bean="serviceFactory" factory-method="getUserService"
          init-method="init"
          destroy-method="destroy"
          scope="prototype" />

</beans>